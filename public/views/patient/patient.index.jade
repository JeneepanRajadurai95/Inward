.col-md-12.col-sm-12.col-xs-12.padding-bottom--10px
    span
        button.btn.btn-default.btn-circle.btn-green(ng-click="partialForm='addPatientForm'", name="addPatientForm")
            i.fa.fa-plus
        span.montserrat  Patient

include patient.add.jade

.col-md-12.col-sm-12.col-xs-12.padding--top--10px.padding-bottom--10px.padding-top--10px
    .col-md-12.col-sm-12.col-xs-12.no-padding-left(ng-if="rpatients.length <= 0")
        h4.montserrat No Patients Data Available                
    .table-responsive(ng-if="rpatients.length>0")
        table.table
            thead.thead-default
                tr
                    td #
                    td BHT
                    td Patient ID
                    td Name
            tbody(ng-repeat="patient in rpatients")
                tr.pointer(ng-click="getPatient(patient.Inward.bhtNumber)")
                    td {{$index + 1}}
                    td {{patient.Inward.bhtNumber}}
                    td {{patient.ID}}
                    td {{patient.Name.firstName}}
                tr(ng-show="patient.Inward.bhtNumber==dpatient.Inward.bhtNumber")
                    td.padding-bottom--30px(colspan="5", style="border-left: 4px solid #F44336;")
                        include patient.info.jade