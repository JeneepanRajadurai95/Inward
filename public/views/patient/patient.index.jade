    span
        button.btn.btn-default.btn-circle(ng-click="partialForm='addPatientForm'")
            i.fa.fa-plus
        span.montserrat  Patient

include patient.add.jade

.col-md-12.padding--top--10px.padding--bottom--10px.padding--top--10px
    .col-md-12.no-padding--left(ng-if="rpatients.length <= 0")
        h4.montserrat No Patients Data Available                
    .table-responsive(ng-if="rpatients.length>0")
        table.table
            thead.thead-default
                tr
                    td #
                    td BHT
                    td Patient ID
                    td Name
                    td
            tbody(ng-repeat="patient in rpatients")
                tr
                    td {{$index + 1}}
                    td {{patient.Inward.bhtNumber}}
                    td {{patient.ID}}
                    td {{patient.Name.firstName}}
                    td.no_padding
                        span
                            button.btn.btn-default.btn-circle(ng-click="getPatient(patient.Inward.bhtNumber)")
                                i.fa.fa-plus
                tr(ng-show="patient.Inward.bhtNumber==dpatient.Inward.bhtNumber")
                    td(colspan="5") 
                        include patient.info.jade