span.col-md-12.col-sm-12.col-xs-12.text-align--right.partial-close
    button.btn.btn-default.btn-circle(ng-click="dpatient.Inward.bhtNumber='null'")
        i.fa.fa-times
.col-md-12.col-sm-12.col-xs-12.card
    .row
        .col-md-12.col-sm-12.col-xs-12.card-top
            h4.col-md-12.col-sm-12-col-xs-12.montserrat
                | {{dpatient.Name.firstName}} {{dpatient.Name.lastName}}
            span.col-md-12.col-sm-12.col-xs-12.montserrat
                small.col-md-3.col-sm-3.col-xs-12.no-padding(style="padding-top: 2px !important;")
                    b BHT # : 
                    | &nbsp; {{dpatient.Inward.bhtNumber}}
                small.col-md-3.col-sm-3.col-xs-12.no-padding(style="padding-top: 2px !important;")
                    b Ward # :
                    | &nbsp; Ward #
                small.col-md-3.col-sm-3.col-xs-12.no-padding(style="padding-top: 2px !important;")
                    b Bed # :
                    | &nbsp; {{dpatient.Inward.bedNumber}}
                small.col-md-3.col-sm-3.col-xs-12.no-padding(style="padding-top: 2px !important;")
                    | {{dpatient.Inward.admittedDateTime | date}}
        .col-md-12.col-sm-12.col-xs-12.card-bottom
            .col-md-12.col-sm-12.col-xs-12(style="padding-top: 15px 0px 15px 15px !important;")
                span.col-md-6.col-sm-6.col-xs-12.padding--2px
                    b {{dpatient.Name.firstName}} {{dpatient.Name.lastName}} &nbsp; | &nbsp; 
                    i.fa(ng-class="(dpatient.Sex == 'Male') ? 'fa-mars' : 'fa-venus'")
                    | &nbsp; {{dpatient.Sex}} &nbsp; | &nbsp;
                    | {{dpatient.MarriedStatus}} &nbsp; | &nbsp; {{dpatient.EmployementStatus}}
                span.col-md-6.col-sm-6.col-xs-12.padding--2px Age : {{dpatient.Age}}
            .col-md-12.col-sm-12.col-xs-12(style="padding: 15px 0px 15px 0px !important;")
                span.col-md-12.col-sm-12.col-xs-12.montserrat(style="padding: 5px 0px 5px 15px !important;")
                    b &nbsp; Address
                span.col.md-12.col-sm-12.col-xs-12 {{dpatient.ContactInfo.Address.AddressLine}}, {{dpatient.ContactInfo.Address.Zip}} | City : {{dpatient.ContactInfo.Address.City}} | Country : {{dpatient.ContactInfo.Address.City}}
            .col-md-12.col-sm-12.col-xs-12.no_padding(style="padding: 5px 15px 5px 15px !important;")
                span.col.md-4.col-sm-4.col-xs-12.padding--2px
                    i.fa.fa-home 
                    | &nbsp; Home &nbsp;&nbsp;: {{dpatient.ContactInfo.Phone.Home}}
                span.col.md-4.col-sm-4.col-xs-12.padding--2px 
                    i.fa.fa-mobile-phone
                    | &nbsp;&nbsp;&nbsp; Mobile &nbsp;: {{dpatient.ContactInfo.Phone.Mobile}}
                span.col.md-4.col-sm-4.col-xs-12.padding--2px
                    i.fa.fa-briefcase
                    | &nbsp; Office &nbsp;&nbsp;: {{dpatient.ContactInfo.Phone.Office}}
            .col-md-12.col-sm-12.col-xs-12
                a(href="#") Open BHT