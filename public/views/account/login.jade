extends _layout

block content
    .container
        .col-md-4.col-xs-12.col-sm-12.col-lg-4.form-template.col-centered
            h3.montserrat Login Page
            hr
            br
            if(message.length > 0)
                .alert.alert-danger #{message}
            form(role="form", action="/auth/login", method="POST")
                .form-group
                    span.montserrat Email | Username
                    input.form-control(type="text", name="email", placeholder="email", ng-model="user.email")
                .form-group
                    span.montserrat Password
                    input.form-control(type="password", name="password", placeholder="password", ng-model="user.password")
                .form-group.padding--top--30px
                    button.btn.btn-default.btn-blue.width--100.padding--10px(type="submit") Submit