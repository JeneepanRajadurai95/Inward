extends _layout

block content
    .container
        h1 Login Page
        br
        if(message.length > 0)
            .alert.alert-danger #{message}
        form(role="form", action="/auth/login", method="POST")
            .form-group
                input.form-control(type="text", name="email", placeholder="Enter Email", ng-model="user.email")
            .form-group
                input.form-control(type="password", name="password", placeholder="Enter Password", ng-model="user.password")
            button.btn.btn-default(type="submit") Submit
            &nbsp;
            a(href="/")
                button.btn.btn-primary(type="button") Cancel